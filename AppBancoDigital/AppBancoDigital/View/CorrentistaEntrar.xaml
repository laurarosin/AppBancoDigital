<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.CorrentistaEntrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Entrar"
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Digite se CPF:" FontSize="20"/>
            <Entry x:Name="txt_cpf" FontSize="20"/>

            <Label Text="Digite a sua senha:" FontSize="20"/>
            <Entry x:Name="txt_Senha" FontSize="20"/>

            <Button Text="Entrar" x:Name="btn_entrar" Clicked="btn_entrar_Clicked"
                    BackgroundColor="PaleVioletRed"
                    BorderColor="Black" 
                    BorderWidth="2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>