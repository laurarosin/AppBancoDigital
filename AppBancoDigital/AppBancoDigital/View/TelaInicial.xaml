<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.TelaInicial">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#F9D8DC"
                          Offset="0.1" />
            <GradientStop Color="#F78D98"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="txt_Correntista"/>
            <Label Text="Olá! Seja bem-vinda."
                   HorizontalOptions="Center"
                   FontSize="25"
                   TextColor="Black"/>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Saldo disponível:"
                               FontSize="20"
                                  TextColor="Black"/>
                            
                         <Span Text="R$1.0000,00" TextColor="Green"
                               FontSize="20"/>
                            
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            
            <Button Text=" Fazer pix" Clicked="Button_Clicked"
                    BackgroundColor="PaleVioletRed"
                    BorderColor="Black" 
                    BorderWidth="2"/>
            <Button Text="Receber pix" Clicked="Button_Clicked_1"  
                     BackgroundColor="PaleVioletRed"
                    BorderColor="Black" 
                    BorderWidth="2"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>