<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.MainPage"
              BackgroundColor="Violet" >
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Banco Digital" 
                   FontSize="60"
                   TextColor="DeepPink"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,100,0,0"/>

            <Button Text="Entrar"  
                    BorderColor="Black" 
                    BorderWidth="2" 
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="Pink" 
                    TextColor="Black"
                    Clicked="Button_Clicked"
                    Margin="0,350,0,0"/>

            <Button Text="Cadastrar" 
                    BorderColor="Black" 
                    BorderWidth="2" 
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="Pink" 
                    TextColor="Black"
                    Clicked="Button_Clicked_1"/>

        </StackLayout>
    </ContentPage.Content>

    

</ContentPage>
